.pic-box
    position:absolute;
    width:100%;
    height:800px;
    background-color:#000;
    overflow:hidden;
    .img-box li
        position:absolute;
        width:260px;
        height:320px;
        padding:10px;
        boxsizing:border-box;
    .img-box img
        height:250px;
        width:100%;
        background-color:#ccc;
    .show-pic
        box-sizing:border-box;
        width:100%;
        height:100%;
        position:absolute;
        left:0;
        top:0;
        padding:20px;
        p
            margin-bottom:0;
            margin-top:10px;
            font-size:14px;
    .img-item
        perspective:1000px;
    .img-detail
        position:absolute;
        left:0;
        top:0;
    .flipper
        transition:1s;
        transform-style:preserve-3d;
        transform-origin:50% 0;
        position:relative;
        width:100%;
        height:100%;
    .front,.back
        backface-visibility:hidden;
    .front
        transform: rotateY(0deg);
        background-color:#eee;

    .back
        transform: rotateY(180deg);
        background-color:#dedcd8;
        height:100%;
        width:100%;
        padding:10px;

*
    transition: top 1s, left 0.5s, transform  0.5s
